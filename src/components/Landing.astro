<main>
  <section class="relative flex flex-wrap h-90vh lg:items-center">
    <div class="w-full px-4 py-12 sm:px-6 sm:py-16 lg:w-1/2 lg:px-8 lg:py-24">
      <div class="mx-auto max-w-lg text-center">
        <h1 class="text-2xl font-bold sm:text-3xl text-titleColor">
          Subscribe today!
        </h1>

        <p class="mt-4 text-textColor">
          Receive the latest news directly to your email!
        </p>
      </div>

      <form action="#" class="mx-auto mb-0 mt-8 max-w-md space-y-4">
        <div>
          <label for="name" class="sr-only">Name</label>

          <div class="relative">
            <input
              type="text"
              class="w-full rounded-lg border-textColor p-4 pe-12 text-sm shadow-sm"
              placeholder="Enter name"
            />

            <span
              class="absolute inset-y-0 end-0 grid place-content-center px-4"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="size-4 text-secondBackgroundColor"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-id"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M3 4m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v10a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z"
                ></path><path d="M9 10m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"
                ></path><path d="M15 8l2 0"></path><path d="M15 12l2 0"
                ></path><path d="M7 16l10 0"></path></svg
              >
            </span>
          </div>
        </div>
        <div>
          <label for="lastName" class="sr-only">Last name</label>

          <div class="relative">
            <input
              type="text"
              class="w-full rounded-lg border-textColor p-4 pe-12 text-sm shadow-sm"
              placeholder="Enter last name"
            />

            <span
              class="absolute inset-y-0 end-0 grid place-content-center px-4"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="size-4 text-secondBackgroundColor"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-id-badge-2"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M7 12h3v4h-3z"></path><path
                  d="M10 6h-6a1 1 0 0 0 -1 1v12a1 1 0 0 0 1 1h16a1 1 0 0 0 1 -1v-12a1 1 0 0 0 -1 -1h-6"
                ></path><path
                  d="M10 3m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v3a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z"
                ></path><path d="M14 16h2"></path><path d="M14 12h4"
                ></path></svg
              >
            </span>
          </div>
        </div>
        <div>
          <label for="email" class="sr-only">Email</label>

          <div class="relative">
            <input
              type="email"
              class="w-full rounded-lg border-textColor p-4 pe-12 text-sm shadow-sm"
              placeholder="Enter email"
            />

            <span
              class="absolute inset-y-0 end-0 grid place-content-center px-4"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="size-4 text-secondBackgroundColor"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                ></path>
              </svg>
            </span>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <p class="text-sm text-secondBackgroundColor">
            No account?
            <a class="underline hover:text-titleColor" href="#">Sign up</a>
          </p>

          <button
            type="submit"
            class="inline-block rounded-lg bg-titleColor px-5 py-3 text-sm font-medium text-backgroundColor"
          >
            Sign in
          </button>
        </div>
      </form>
    </div>

    <div class="relative h-64 w-full sm:h-96 lg:h-full lg:w-1/2">
      <img
        alt=""
        src="https://i.pinimg.com/originals/79/71/02/797102b5b2fb3f9ba0ae25c5acfa2bfd.jpg"
        class="absolute inset-0 h-full w-full object-cover"
      />
    </div>
  </section>
</main>
